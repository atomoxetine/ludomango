# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{html,js,css}]
indent_size = 2
end_of_line = crlf

[Makefile]
indent_style = tab
end_of_line = crlf